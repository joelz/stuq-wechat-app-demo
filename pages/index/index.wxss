/**index.wxss**/
.container{
  background-color: #f1f5f7;
}
.slide-image{
  width:100%;
  height:100%;
}
.notice{
  width:100%;
  height:60rpx;
  display:flex;
  flex-wrap:nowrap;
  background-color: #ffffff;
  margin-top:15rpx;
}
.notice-img{
  width:5%;
  height:80%;
  margin:10rpx 0 10rpx 10rpx;
}
.notice-title{
  width:23%;
  height:50%;
  font-size:15px;
  margin:15rpx 0 10rpx 5rpx;
}
.notice-content{
  width:72%;
  height:50%;
  font-size:15px;
  margin:15rpx 0 10rpx 5rpx;
}
.list{
  width:100%;
  height:100%;
  background-color: #ffffff;
}
.list-item{
  width:100%;
  height:100%;
  display:flex;
  flex-wrap:nowrap;
  align-items:center;
}
.list-item-img{
  width:35%;
  height:180rpx;
  margin:10rpx 5rpx 10rpx 10rpx;
}
.list-item-right{
  width:65%;
  height:100%;
  display:flex;
  flex-wrap:wrap;
  margin:10rpx 5rpx 10rpx 10rpx;
}
.list-item-title{
  font-size:20px;
}
.list-item-content{
  font-size:14px;
  color:#d3d3d3;
  margin-top:5rpx;
}
.list-item-foot{
  font-size:14px;
   margin-top:5rpx;
}
.line{
  width:100%;
  border:1px solid #f1f5f7;
}